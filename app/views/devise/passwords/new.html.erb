<div class="w-full min-h-screen flex flex-col sm:justify-center items-center pt-2 sm:pt-0">
  <div class=" bg-gray-50 w-full sm:max-w-md p-5 mx-auto rounded-sm border-solid border-4 border-red-400 ring-2 ring-red-700">
    <h2 class="mb-6 text-center text-3xl font-extrabold">Forgot your password?</h2>
    <div >
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-4">
          <%= f.label :email,class:"font-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"py-2 px-3 border border-gray-300 focus:border-red-300 focus:outline-none focus:ring focus:ring-red-200 focus:ring-opacity-50 rounded-md shadow-sm disabled:bg-gray-100 mt-1 block w-full" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions"%>
        </div>
      <% end %>
      
      <div class="m-6 flex justify-between">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
