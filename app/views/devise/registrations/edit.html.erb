<div class="w-full min-h-screen flex flex-col sm:justify-center items-center pt-2 sm:pt-0">
  <div class="bg-zinc-50 w-11/12 sm:max-w-lg p-5 mx-auto border-b-4 border-t-4 border-l-2 border-r-2 border-blue-50 m-20 rounded-lg">
    <h2 class="mb-12 text-center text-2xl font-extrabold">Edit Password</h2> 
    <div>
    
<%# <h2>Edit <%= resource_name.to_s.humanize</h2> %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%# <div> %>
    <%# <%= f.label :username %>
    <%# <%= f.username_field :username, autofocus: true, autocomplete: "",class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"   %>
  <%# </div> %> 
  <div class="mb-5"> 
    <%= f.label :username %><br/>
     <%= f.text_field :username, autofocus: true, class:" rounded-md py-2 px-3 border border-gray-300 focus:border-red-300 focus:outline-none focus:ring focus:ring-red-200 focus:ring-opacity-50 rounded-md shadow-sm disabled:bg-gray-100 mt-1 block w-full" %>
  </div>

  
  <div class="mb-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-5">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="mb-5">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="mb-5">
    <%= f.label :current_password %> <i>(needed to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="actions">
    <%= f.submit "Update",class: "w-full inline-flex items-center justify-center px-4 py-2 bg-blue-500 border border-transparent rounded-md font-semibold capitalize text-white hover:bg-blue-700 active:bg-blue-700 focus:outline-none focus:border-blue-700 focus:ring focus:ring-blue-200 disabled:opacity-25 transition" %>
  </div>
<% end %>

<%# <h3>Cancel my account</h3> %>
<div class="mt-5">
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "w-full inline-flex items-center justify-center px-4 py-2 bg-red-500 border border-transparent rounded-md font-semibold capitalize text-white hover:bg-red-700 active:bg-red-700 focus:outline-none focus:border-red-700 focus:ring focus:ring-red-200 disabled:opacity-25 transition" %>
</div>


  <%# <%= link_to "Back", :back%>


    </div>
  </div>
</div>